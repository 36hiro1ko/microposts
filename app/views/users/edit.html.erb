<h1>edit your profile</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user) do |f| %>
      <%= render 'shared/error_messages', object: f.object %> 
      
      <div class="form-group">
      <%= f.label :name, 'なまえ' %>
      <%= f.text_field :name, placeholder: "なまえ", class: "form-control" %>
      </div>
      
      <div class="form-group">
      <%= f.label :email, 'Email' %>
      <%= f.text_field :email, placeholder: "Email", class: "form-control" %>
      </div>
      
      <div class="form-group">
      <%= f.label :address, '出身地' %>
      <%= f.text_field :address, placeholder: "出身地", class: "form-control" %>
      </div>
      
      <div class="form-group">
      <%= f.label :profile, '自己紹介' %>
      <%= f.text_area :profile, placeholder: "自己紹介", class: "form-control" %>
      </div>

      <%= f.submit "Edit my account", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>